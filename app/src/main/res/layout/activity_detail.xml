<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_detail_relativelayout_padding"
        tools:context="com.udacity.sandwichclub.DetailActivity">

        <ImageView
            android:id="@+id/image_iv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_detail_image_iv_layout_height"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            android:contentDescription="@string/sandwich_picture_content_description"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/place_of_origin_label_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_iv"
            android:text="@string/detail_place_of_origin_label"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:paddingTop="@dimen/activity_detail_place_of_origin_label_paddingtop" />

        <TextView
            android:id="@+id/origin_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/place_of_origin_label_tv"
            android:layout_toRightOf="@+id/place_of_origin_label_tv"
            android:layout_below="@id/image_iv"
            android:paddingLeft="@dimen/activity_detail_textview_default_padding"
            android:paddingRight="@dimen/activity_detail_textview_default_padding"
            android:paddingTop="@dimen/activity_detail_textview_default_padding"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/also_known_as_label_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/origin_tv"
            android:paddingTop="@dimen/activity_detail_textview_default_padding"
            android:text="@string/detail_also_known_as_label"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/also_known_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/also_known_as_label_tv"
            android:layout_toRightOf="@id/also_known_as_label_tv"
            android:layout_below="@+id/origin_tv"
            android:padding="@dimen/activity_detail_textview_default_padding"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/ingredients_label_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/also_known_tv"
            android:background="#ffffff"
            android:paddingTop="@dimen/activity_detail_ingredients_label_tv_padding"
            android:text="@string/detail_ingredients_label"
            android:textSize="@dimen/activity_detail_tv_default_textsize"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/ingredients_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ingredients_label_tv"
            android:paddingTop="@dimen/activity_detail_textview_default_padding"
            android:textSize="@dimen/activity_detail_tv_default_textsize" />

        <TextView
            android:id="@+id/description_label_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ingredients_tv"
            android:background="@android:color/white"
            android:paddingTop="@dimen/activity_detail_description_label_tv_paddingtop"
            android:text="@string/detail_description_label"
            android:textSize="@dimen/activity_detail_tv_default_textsize"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/description_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/description_label_tv"
            android:paddingTop="@dimen/activity_detail_textview_default_padding"
            android:textSize="@dimen/activity_detail_tv_default_textsize" />

    </RelativeLayout>
</ScrollView>